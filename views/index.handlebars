<h1>Eat-Da-Burger!</h1>

<div class="opacity">

<h2>Burgers to Devour</h2>
<ol>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ol>
</div>

<div class="opacity">
<h2>Burger Devoured</h2>

<div class= "list">
<ol>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ol>
</div>
</div>

<div class="opacity"> 

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
     <button type="submit">Add Burger</button>
  </div>


</form>

</div>
